<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package ="com.assign.models">
   <class name="Bet" table="bets">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="id" type="int" column="bet_id">
         <generator class="native"/>
      </id>
      <property name="user" column="user" type="string"/>
      <property name="risk_level" column="risk_level" type="int"/>
      <property name="amount" column="amount" type="int"/>

   </class>
</hibernate-mapping>